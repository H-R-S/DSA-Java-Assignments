import java.util.Scanner;

public class node {

	private String name;
	private int tel;
	private int id;

	public node() {
		
		tel = 0;
		id = 0;
	}
	
	public class hashing {
	
		private node[] data = new node[100];
		private String n;
		private int t;
		private int i;
		private int index;
	
		public hashing() {
	
			i = 0;
			t = 0;
		}
	
		public void create_record(int size) {
			
			i = 51379;
			n = "Muhammad Haris";
			t = 03112224501;
	
			System.out.print("\nEnter id : " + i);
			System.out.print("\nEnter Name : " + n);
			System.out.print("\nEnter Telephone Number : " + t);
			
			index = i % size;
	
			for (int j = 0; j < size; j++) {
	
				if (data[index].id == 0) {
	
					data[index].id = i;
					data[index].name = n;
					data[index].tel = t;
					break;
				}
				else {
	
					index = (index + 1) % size;
				}
			}
		}
		
		public void search_record(int size) {
	
			int index1;
			int key;
			int flag = 0;
			key = 4;
	
			System.out.print("\nEnter record id to search : " + key);
	
			index1 = key % size;
		
			for (int a = 0; a < size; a++) {
	
				if (data[index1].id == key) {
					
					flag = 1;
	
					System.out.print("\nRecord found");
					System.out.print("\n\tID : " + data[index1].id);
					System.out.print("\tNAME : " + data[index1].name);
					System.out.print("\t\tTELEPHONE : " + data[index1].tel);
				}
				else {
					index1 = (index1 + 1) % size;
				}
			
				if (flag == 0) {
			
					System.out.print("\nRecord not found");
				}
			}
		}
			
		public void delete_record(int size) {

			int index1;
			int key;
			int flag = 0;
			key = 4;
		
			System.out.print("\nEnter record");
			System.out.print(" id to delete : " + key);
		
			index1 = key % size;
		
			for (int a = 0; a < size; a++) {
		
				if (data[index1].id == key) {
				
					flag = 1;
					data[index1].id = 0;
					data[index1].name = " ";
					data[index1].tel = 0;
					
					System.out.print("\nRecord deleted successfully");
				}
				else {
					
					index1 = (index1 + 1) % size;
				}
			}
			
			if (flag == 0) {
	
				System.out.print("\nRecord not found");
			}
		}
		
		private void update_record(int size) {
			
			Scanner scan = new Scanner(System.in);
		
			int index1;
			int key;
			int flag = 0;
			key = 4;
		
			System.out.print("\nEnter record id to update : " + key);
		
			index1 = key % size;
			
			for (int a = 0; a < size; a++) {

				if (data[index1].id == key) {

					flag = 1;
				}
				else {
	
					index1 = (index1 + 1) % size;
				}
				
				if (flag == 1) {
				
					n = "XYZ Agarwal";
					t = 23413421;
				
					data[index1].name = n;
					data[index1].tel = t;
					
					System.out.print("\nEnter name : ");
				    scan.next(n);
				
				    System.out.print("\nEnter telephone number : ");
				    scan.nextInt(t);
				
				    System.out.print("\nDetails updated: ");
				    System.out.print("\nID : " + data[index1].id);
				    System.out.print("\nName : " + data[index1].name);
				    System.out.print("\nTELEPHONE : " + data[index1].tel);
				}
			}
		}
		
		private void display_record(int size) {
		
			System.out.print("\n\tID \tNAME \t\tTELEPHONE ");
		
			for (int a = 0; a < size; a++) {
		
				if (data[a].id != 0) {
		
					System.out.print(data[a].id);
					System.out.print(data[a].name);
					System.out.print(data[a].tel);
				}
			}
		}	
	}
}

